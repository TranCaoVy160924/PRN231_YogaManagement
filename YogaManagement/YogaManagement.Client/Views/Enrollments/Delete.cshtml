@using YogaManagement.Client.OdataClient.YogaManagement.Contracts.Enrollment;
@model EnrollmentDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Unenroll</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <div class="col-md-4">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Enroll Date</label>
                    <input readonly asp-for="EnrollDate" class="form-control" />
                    <span asp-validation-for="EnrollDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="control-label"></label>
                    <input hidden asp-for="Discount" class="form-control" />
                    @(Model.Discount * 100)%
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input readonly asp-for="MemberName" class="form-control" />
                    <input hidden asp-for="MemberId" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Yoga Class</label>
                    <input readonly asp-for="YogaClassName" class="form-control" />
                    <input hidden asp-for="YogaClassId" class="form-control" />
                    <input hidden asp-for="CourseId" class="form-control" />
                </div>
            </form>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="MemberId" value="@Model.MemberId" />
        <input type="hidden" name="YogaClassId" value="@Model.YogaClassId" />
        <input type="submit" value="Unenroll" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
