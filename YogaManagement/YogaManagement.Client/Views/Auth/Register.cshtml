@using YogaManagement.Contracts.Authority.Request;
@{
    Layout = "_EmptyLayout";
}
@model RegisterRequest

<div style="margin-top: 5vh">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample" />
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-controller="Auth" asp-action="Register" method="post">
                    <div class="form-outline mb-4">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" type="text" class="form-control form-control-lg"
                               placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4 row">
                        <div class="col-lg-6">
                            <label class="form-label">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control form-control-lg"
                                   placeholder="Enter First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label class="form-label">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control form-control-lg"
                                   placeholder="Enter Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-outline mb-4 row">
                        <div class="col-lg-6">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"
                                   placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg"
                                   placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <span style="align-self: center" class="text-danger">@(TempData["RegisterErrorMessage"])</span>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem">
                            Register
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Already have an account?
                            <a asp-controller="Auth" asp-action="Login" class="link-danger">
                                Login
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div style="position: absolute; bottom: 0; right: 0; left: 0" class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
        <div class="text-white mb-3 mb-md-0">
            Copyright © 2020. All rights reserved.
        </div>
        <div>
            <a href="#!" class="text-white me-4">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#!" class="text-white me-4">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="#!" class="text-white me-4">
                <i class="fab fa-google"></i>
            </a>
            <a href="#!" class="text-white">
                <i class="fab fa-linkedin-in"></i>
            </a>
        </div>
    </div>
</div>
