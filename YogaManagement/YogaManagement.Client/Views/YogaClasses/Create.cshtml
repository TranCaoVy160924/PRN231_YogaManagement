@using YogaManagement.Client.OdataClient.YogaManagement.Contracts.YogaClass;
@model YogaClassDTO

@{
    ViewData["Title"] = "Create";
    var errorMessage = ViewData["Error"] as string;
    if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            @errorMessage
        </div>
    }
}

<h1>Create</h1>

<h4>Yoga Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <input hidden asp-for="YogaClassStatus" value="Pending" />
            <div class="form-group">
                <label class="control-label">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
