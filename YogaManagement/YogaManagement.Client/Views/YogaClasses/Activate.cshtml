@using YogaManagement.Client.OdataClient.YogaManagement.Contracts.YogaClass;
@model YogaClassDTO

@{
    ViewData["Title"] = "Activate";
}

<h1>Activate</h1>

<h3>Are you sure you want to activate this?</h3>
<div>
    <h4>YogaClass</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Class Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Size
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YogaClassStatus)
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
    </dl>

    <form asp-action="Activate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Activate" class="btn btn-primary" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
